<div class="container">
  <div class="row">
    <% @albums.each do |album| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <% if album.pics.any? %>
            <%= link_to image_tag(album.pics.first.image.url(:medium)), album %>
          <% end %>
          <div class="caption">
            <h3 class="text-center"><%= album.title %></h3>
            <p><%= album.description %></p>
            <p>
              <%= link_to "Edit", edit_album_path(album), class: "btn btn-warning" %>
              <%= link_to "Delete", album, class: "btn btn-danger pull-right",
                                           method: :delete,
                                           data: { confirm: 'Are you sure?' } %>
             </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
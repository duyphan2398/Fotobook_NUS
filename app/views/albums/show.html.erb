<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<p>
  <strong>Sharing mode:</strong>
  <%= @album.sharing_mode %>
</p>

<div>
  <% @album.pics.each do |pic| %>
        <%= link_to image_tag(pic.image.url(:medium)), pic.image.url, data: { gallery: ''} %>
        <% end %>
</div>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
